<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#87CEEB"/> <!-- Shadow color (adjust alpha for transparency) -->
            <corners android:radius="25dp"/> <!-- Adjust the radius for slightly rounded corners -->
        </shape>
    </item>

    <!-- Background -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Adjust the color to your preference -->
            <corners android:radius="25dp"/> <!-- Adjust the radius for slightly rounded corners -->
        </shape>
    </item>

</layer-list>
